{
	"name": "wechat_markdown",
	"version": "1.0.0",
	"author": "Jack Li <jack.lee2980@gmail.com>",
	"license": "MIT",
	"packageManager": "yarn@3.1.1",
	"type": "module",
	"scripts": {
		"serve": "NODE_ENV=development node --loader ts-node/esm ./build.ts --serve",
		"build": "yarn run build-prod",
		"build-dev": "NODE_ENV=development node --loader ts-node/esm ./build.ts",
		"build-prod": "NODE_ENV=production node --loader ts-node/esm ./build.ts",
		"dist": "yarn run build-prod && tar -C ./dist -czvf dist.tar.gz .",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint --cache .",
		"lint:tsc": "tsc --noEmit",
		"lint:lit": "lit-analyzer --strict",
		"lint": "yarn run lint:prettier && yarn run lint:eslint && yarn run lint:tsc ",
		"fix": "prettier --write . ; eslint --cache --fix .",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable"
	},
	"devDependencies": {
		"@types/debounce": "^1",
		"@types/dompurify": "^2",
		"@types/eslint": "^8",
		"@types/file-saver": "^2",
		"@types/markdown-it": "^12",
		"@types/node": "^17.0.7",
		"@types/xxhashjs": "^0",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.0",
		"eslint": "^7.12.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard-with-typescript": "latest",
		"eslint-import-resolver-node": "^0.3.6",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-lit": "^1.6.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.0.0",
		"husky": ">=6",
		"lint-staged": ">=10",
		"lit-analyzer": "^1.2.1",
		"pinst": ">=2",
		"prettier": "^2.5.1",
		"ts-lit-plugin": "^1.2.1",
		"typescript": "<4.5.0",
		"typescript-lit-html-plugin": "^0.9.0"
	},
	"dependencies": {
		"@chialab/esbuild-plugin-html": "^0.14.10",
		"@types/cli-color": "^2",
		"cli-color": "^2.0.1",
		"debounce": "^1.2.1",
		"dompurify": "^2.3.4",
		"esbuild": "^0.14.10",
		"file-saver": "^2.0.5",
		"juice": "^8.0.0",
		"lit": "^2.1.1",
		"markdown-it": "^12.3.0",
		"markdown-it-abbr": "^1.0.4",
		"markdown-it-container": "^3.0.0",
		"markdown-it-deflist": "^2.1.0",
		"markdown-it-emoji": "^2.0.0",
		"markdown-it-footnote": "^3.0.3",
		"markdown-it-inject-linenumbers": "https://github.com/digitalmoksha/markdown-it-inject-linenumbers.git",
		"markdown-it-ins": "^3.0.1",
		"markdown-it-mark": "^3.0.1",
		"markdown-it-sub": "^1.0.0",
		"markdown-it-sup": "^1.0.0",
		"monaco-editor": "^0.31.1",
		"punycode": "^2.1.1",
		"split.js": "^1.6.4",
		"terser": "^5.10.0",
		"ts-node": "^10.4.0",
		"xxhashjs": "^0.2.2"
	},
	"engines": {
		"node": ">=16"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --cache --fix",
			"yarn run lint:lit"
		],
		"*.{js,ts,css,md,json,html}": "prettier --write"
	}
}
